# ============================================
# BEON MAILER - KONFIGURASI ENVIRONMENT
# ============================================
# Salin file ini ke .env dan isi dengan nilai yang sesuai
# cp .env.example .env

# ============================================
# SMTP CONFIGURATION (WAJIB)
# ============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-password-or-app-password
SMTP_SECURE=false
# SMTP_SECURE: true untuk port 465 (SSL), false untuk port 587 (TLS/STARTTLS)

# Hostname untuk EHLO/HELO (opsional, support placeholder dinamis)
# Contoh: mail.{lowercase_8}.com
SMTP_HOSTNAME=localhost

# ============================================
# EMAIL CONTENT CONFIGURATION
# ============================================
# Nama pengirim (support placeholder dinamis)
SENDER_NAME=Nama Pengirim

# Subject email (support placeholder dinamis)
EMAIL_SUBJECT=Subject Email Anda

# Path ke template HTML (relatif dari root project)
LETTER_PATH=letters/letter.html

# Custom from email (opsional, jika kosong akan pakai SMTP_USER)
# Support placeholder dinamis, contoh: noreply-{lowercase_5}@domain.com
CUSTOM_FROM_EMAIL=

# Prioritas email: high, normal, low
EMAIL_PRIORITY=normal

# Gunakan header minimal (true/false)
# Jika true, tidak akan menambah X-Priority dan X-NSS header
USE_MINIMAL_HEADERS=false

# ============================================
# SENDING MODE CONFIGURATION
# ============================================
# Mode batch: true = kirim paralel per batch, false = kirim satu per satu
ENABLE_BATCH_SENDING=false

# Jumlah email per batch (hanya berlaku jika ENABLE_BATCH_SENDING=true)
BATCH_SIZE=10

# Delay dalam detik antar email/batch
SEND_DELAY_SECONDS=1

# ============================================
# LIST MANAGEMENT
# ============================================
# Hapus email duplikat dari list sebelum kirim (true/false)
REMOVE_DUPLICATE_EMAILS=true

# Hapus email yang sudah terkirim dari file list (true/false)
REMOVE_SENT_EMAIL_FROM_LIST=false

# ============================================
# DEBUG MODE
# ============================================
# Aktifkan debug mode untuk melihat log Nodemailer detail (true/false)
DEBUG_MODE=false

# ============================================
# RETRY CONFIGURATION
# ============================================
# Jumlah percobaan ulang jika pengiriman gagal (0 = tidak ada retry)
RETRY_ATTEMPTS=2

# Delay dalam detik sebelum retry
RETRY_DELAY_SECONDS=3

# ============================================
# FILE LOGGING
# ============================================
# Simpan hasil pengiriman ke file log di folder logs/ (true/false)
ENABLE_FILE_LOGGING=true
